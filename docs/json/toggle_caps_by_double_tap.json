{
  "title": "Toggle Caps Lock by double tapping modifier key",
  "rules": [
    {
      "description": "Toggle ⇪ by pressing left-⌘ twice [See Preferences > Devices: \"Manipulate LED\", for non- keyboards]",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "toggle-caps-lock-left-command",
              "value": 1
            }
          ],
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "toggle-caps-lock-left-command",
                "value": 1
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "toggle-caps-lock-left-command",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "toggle-caps-lock-left-command",
                  "value": 0
                }
              }
            ]
          }
        }
      ]
    },
