{
  "title": "Section sign (ยง) to Escape",
  "rules": [
    {
      "description": "Section sign (ยง) to Escape and fn + Section sign (ยง) to Section sign (ยง). Useful on Mac with Touch Bar, where is no physical Escape key.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "non_us_backslash"
            }
          ]
        }
      ]
    }
  ]
}
