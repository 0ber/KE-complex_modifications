{
    "title": "Toggle Caps Lock by double tapping modifier key",
    "rules": [
        {
            "description": "Toggle ⇪ by pressing left-⌘ twice [See Preferences > Devices: \"Manipulate LED\", for non- keyboards]",
            "manipulators": [
                {
                    "type": "basic",
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "toggle-caps-lock-left-command",
                            "value": 1
                        }
                    ],
                    "from": <%= from("left_command", [], ["caps_lock"]) %>,
                    "to": <%= to([["caps_lock"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("left_command", [], ["caps_lock"]) %>,
                    "to": [
                        {
                            "set_variable": {
                                "name": "toggle-caps-lock-left-command",
                                "value": 1
                            }
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "toggle-caps-lock-left-command",
                                    "value": 0
                                }
                            }
                        ],
                        "to_if_canceled": [
                            {
                                "set_variable": {
                                    "name": "toggle-caps-lock-left-command",
                                    "value": 0
                                }
                            }
                        ]
                    }
                }
