{
    "title": "Change ctrl + i/j/k/l to arrow keys",
    "rules": [
        {
            "description": "Change Control + i/j/k/l to Arrows",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("j", ['control'], ['any']) %>,
                    "to": <%= to([["left_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("k", ['control'], ['any']) %>,
                    "to": <%= to([["down_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("i", ['control'], ['any']) %>,
                    "to": <%= to([["up_arrow"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ['control'], ['any']) %>,
                    "to": <%= to([["right_arrow"]]) %>
                }
            ]
        },

        {
            "description": "Change Option + j/l to beginning/end of word",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("j", ['option'], ['any']) %>,
                    "to": <%= to([["left_arrow", 'left_option']]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ['option'], ['any']) %>,
                    "to": <%= to([["right_arrow", 'left_option']]) %>
                }
            ]
        },

        {
            "description": "Change CMD + j/l to command left_arrow/right_arrow",
            "manipulators": [
                 {
                    "type": "basic",
                    "from": <%= from("j", ['command'], ['any']) %>,
                    "to": <%= to([["left_arrow", 'left_command']]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("l", ['command'], ['any']) %>,
                    "to": <%= to([["right_arrow", 'left_command']]) %>
                }
            ]
        }
    ]
}