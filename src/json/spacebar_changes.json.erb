{
    "title": "Spacebar changes",
    "rules": [        
        {
            "description": "Post space is pressed alone, left_ctrl otherwise",
            "manipulators": [
                {
                    "from": <%= from("spacebar", [], ["any"]) %>,
                    "to": <%= to([["left_control"]]) %>,
                    "to_if_alone": <%= to([["spacebar"]]) %>,
                    "type": "basic"
                }
            ]
        }
    ]
}
