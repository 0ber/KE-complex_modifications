{
    "title": "For Japanese （日本語環境向けの設定）",
    "rules": [
        {
            "description": "コマンドキーを単体で押したときに、英数・かなキーを送信する。（左コマンドキーは英数、右コマンドキーはかな）",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("left_command", [], ["any"]) %>,
                    "to": <%= to([["left_command"]]) %>,
                    "to_if_alone": <%= to([["japanese_eisuu"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("right_command", [], ["any"]) %>,
                    "to": <%= to([["right_command"]]) %>,
                    "to_if_alone": <%= to([["japanese_kana"]]) %>
                }
            ]
        },
        {
            "description": "escキーを押したときに、英数キーも送信する(vim用)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("escape", [], []) %>,
                    "to": <%= to([["escape"], ["japanese_eisuu"]]) %>
                }
            ]
        },
        {
            "description": "Ctrl+[を押したときに、英数キーも送信する(vim用)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("open_bracket", ["control"], []) %>,
                    "to": <%= to([["open_bracket", ["control"]], ["japanese_eisuu"]]) %>
                }
            ]
        }
    ]
}
