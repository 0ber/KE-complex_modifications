                <%# Space-{d,f,g,comma,period} to {⌘-w,⌘-f,⌘-g,⌘-t,⌘-⇧-t} %>
                <%# -------------------------------------------------- %>
                {
                    "type": "basic",
                    "from": <%= from("d", [], ["caps_lock"]) %>,
                    "to": <%= to([["w", ["left_command"]]]) %>,
                    "conditions": [
                        { "type": "variable_if", "name": "touchcursor_extended_mode", "value": 1 }
