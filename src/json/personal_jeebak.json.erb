                    "from": <%= from("period", [], ["caps_lock"]) %>,
                    "to": <%= to([["t", ["left_command", "left_shift"]]]) %>,
                    "conditions": [
                        { "type": "variable_if", "name": "touchcursor_extended_mode", "value": 1 }
