                },
                {
                    "type": "basic",
                    "from": <%= from("f", [], ["caps_lock"]) %>,
                    "to": <%= to([["f", ["left_command"]]]) %>,
                    "conditions": [
                        { "type": "variable_if", "name": "touchcursor_extended_mode", "value": 1 }
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("g", [], ["caps_lock"]) %>,
                    "to": <%= to([["g", ["left_command"]]]) %>,
                    "conditions": [
                        { "type": "variable_if", "name": "touchcursor_extended_mode", "value": 1 }
