{
    "title": "Swiss PC-Style Shortcuts (AltGr+' -> '´', AltGr+< -> 'backslash', AltGr+è -> '[', AltGr+¨ -> ']', AltGr+à -> '{', AltGr+$ -> '}')",
    "rules": [
        {
            "description": "AltGr+< -> 'backslash'",
            "manipulators": [
                {
                    "from": <%= from("grave_accent_and_tilde", ["right_option"], ["any"]) %>,
                    "to": <%= to([["7", ["option", "left_shift"]]]) %>,
                    "type": "basic",
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "AltGr+' -> '´'",
            "manipulators": [
                {
                    "from": <%= from("hyphen", ["right_option"], ["any"]) %>,
                    "to": <%= to([["equal_sign", ["option"]]]) %>,
                    "type": "basic",
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "AltGr+è -> '['",
            "manipulators": [
                {
                    "from": <%= from("open_bracket", ["right_option"], ["any"]) %>,
                    "to": <%= to([["5", ["option"]]]) %>,
                    "type": "basic",
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "AltGr+¨-> ']'",
            "manipulators": [
                {
                    "from": <%= from("close_bracket", ["right_option"], ["any"]) %>,
                    "to": <%= to([["6", ["option"]]]) %>,
                    "type": "basic",
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "AltGr+2 -> '@'",
            "manipulators": [
                {
                    "from": <%= from("2", ["right_option"], ["any"]) %>,
                    "to": <%= to([["g", ["option"]]]) %>,
                    "type": "basic",
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "AltGr+à -> '{'",
            "manipulators": [
                {
                    "from": <%= from("quote", ["right_option"], ["any"]) %>,
                    "to": <%= to([["8", ["option"]]]) %>,
                    "type": "basic",
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "AltGr+$ -> '}'",
            "manipulators": [
                {
                    "from": <%= from("non_us_pound", ["right_option"], ["any"]) %>,
                    "to": <%= to([["9", ["option"]]]) %>,
                    "type": "basic",
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        },
        {
            "description": "AltGr+^ -> '~'",
            "manipulators": [
                {
                    "from": <%= from("equal_sign", ["right_option"], ["any"]) %>,
                    "to": <%= to([["n", ["option"]]]) %>,
                    "type": "basic",
                    "conditions": [
                        <%= frontmost_application_unless(["remote_desktop", "virtual_machine"]) %>
                    ]
                }
            ]
        }
    ]
}
